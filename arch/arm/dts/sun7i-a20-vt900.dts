/dts-v1/;
#include "sun7i-a20.dtsi"
#include "sunxi-common-regulators.dtsi"

#include <dt-bindings/gpio/gpio.h>
#include <dt-bindings/input/input.h>
#include <dt-bindings/interrupt-controller/irq.h>

/ {
	model = "Vutlan VT900";
	compatible = "vt900", "vutlan,a20-vt900", "allwinner,sun7i-a20";

	aliases {
		serial0 = &uart0;
		serial1 = &uart6;
		serial2 = &uart7;
		spi0 = &spi1;
		spi1 = &spi2;
	};

	chosen {
		stdout-path = "serial0:115200n8";
	};

	leds {
		compatible = "gpio-leds";
		pinctrl-names = "default";
		pinctrl-0 = <&led_pins>;

		hdd {
			label = "hdd_led";
			gpios = <&pio 3 22 GPIO_ACTIVE_HIGH>; /* PC22 */
		};

		err {
			label = "err_led";
			gpios = <&pio 3 23 GPIO_ACTIVE_HIGH>; /* PC23 */
		};

		status {
			label = "status_led";
			gpios = <&pio 3 24 GPIO_ACTIVE_HIGH>; /* PC24 */
			default-state = "on";
			linux,default-trigger = "heartbeat";
		};

		can {
			label = "can";
			gpios = <&pio 3 25 GPIO_ACTIVE_HIGH>; /* PC25 */
		};
	};

	pwr {
		compatible = "gpio-leds";
		pinctrl-names = "default";
		pinctrl-0 = <&pwr_pins>;

		usb1_pwr {
			label = "usb1_pwr";
			gpios = <&pio 7 14 GPIO_ACTIVE_HIGH>; /* PH14 */
			default-state = "on";
		};

		usb2_pwr {
			label = "usb2_pwr";
			gpios = <&pio 7 15 GPIO_ACTIVE_HIGH>; /* PH15 */
			default-state = "on";
		};
	};

	mmc2_pwrseq: pwrseq {
		compatible = "mmc-pwrseq-emmc";
		reset-gpios = <&pio 2 24 GPIO_ACTIVE_LOW>;
	};
};

&ahci {
	target-supply = <&reg_ahci_5v>;
	status = "okay";
};

&codec {
	status = "okay";
};

&can0 {
	pinctrl-names = "default";
	pinctrl-0 = <&can0_pins_a>;
	status = "okay";
};

&cpu0 {
	cpu-supply = <&reg_dcdc2>;
};

&ehci0 {
	status = "okay";
};

&ehci1 {
	status = "okay";
};

&emac_sram {
	status = "okay";
};

&gmac {
	pinctrl-names = "default";
	pinctrl-0 = <&gmac_pins_mii_a>, <&gmac_txerr>;
	phy = <&phy1>;
	phy-mode = "mii";
	status = "okay";

	phy1: ethernet-phy@1 {
		reg = <0>;
	};
};

&i2c0 {
	pinctrl-names = "default";
	pinctrl-0 = <&i2c0_pins_a>;
	status = "okay";

	axp209: pmic@34 {
		reg = <0x34>;
		interrupt-parent = <&nmi_intc>;
		interrupts = <0 IRQ_TYPE_LEVEL_LOW>;
	};
};

&i2c1 {
	pinctrl-names = "default";
	pinctrl-0 = <&i2c1_pins_a>;
	status = "okay";
};
/*
&i2c4 {
	pinctrl-names = "default";
	pinctrl-0 = <&i2c4_pins_a>;
	status = "okay";
};
*/
&lradc {
	vref-supply = <&reg_vcc3v0>;
	status = "okay";

	button@392 {
		label = "Unmount";
		linux,code = <KEY_VOLUMEDOWN>;
		channel = <0>;
		voltage = <392644>;
	};

	button@1184 {
		label = "Recover";
		linux,code = <KEY_ESC>;
		channel = <0>;
		voltage = <1184678>;
	};
};

&mmc0 {
	pinctrl-names = "default";
	pinctrl-0 = <&mmc0_pins_a>;
	vmmc-supply = <&reg_vcc3v3>;
	bus-width = <4>;
	cd-gpios = <&pio 7 10 GPIO_ACTIVE_HIGH>; /* PH10 */
	cd-inverted;
	status = "okay";
};

&mmc2 {
	pinctrl-names = "default";
	pinctrl-0 = <&mmc2_pins_a>;
	vmmc-supply = <&reg_vcc3v3>;
	vqmmc-supply = <&reg_vcc3v3>;
	bus-width = <4>;
	non-removable;
	mmc-pwrseq = <&mmc2_pwrseq>;
	max-frequency = <12000000>;
	status = "okay";

	emmc: emmc@0 {
		reg = <0>;
		compatible = "mmc-card";
		broken-hpi;
	};
};

&ohci0 {
	status = "okay";
};

&ohci1 {
	status = "okay";
};

&otg_sram {
	status = "okay";
};

&pio {
	gmac_txerr: gmac_txerr@0 {
		pins = "PA17";
		function = "gmac";
	};

	led_pins: led_pins@0 {
		pins = "PD22", "PD23", "PD24", "PD25";
		function = "gpio_out";
	};

	pwr_pins: pwr_pins@0 {
		pins = "PH14", "PH15";
		function = "gpio_out";
	};
	usb0_id_detect_pin_vt900v2: usb0_id_detect_pin_vt900v2@0 {
		allwinner,pins = "PH11";
		allwinner,function = "gpio_in";
		bias-pull-up;
	};
	usb0_vbus_detect_pin_vt900v2: usb0_vbus_detect_pin_vt900v2@0 {
		allwinner,pins = "PH13";
		allwinner,function = "gpio_in";
		bias-pull-down;
	};
	usb0_vbus_pin_vt900v2: usb1_vbus_pin@0 {
		allwinner,pins = "PB9";
		allwinner,function = "gpio_out";
	};
	usb1_vbus_pin_vt900v2: usb1_vbus_pin@0 {
		allwinner,pins = "PH14";
		allwinner,function = "gpio_out";
	};
	usb2_vbus_pin_vt900v2: usb1_vbus_pin@0 {
		allwinner,pins = "PH15";
		allwinner,function = "gpio_out";
	};
};

&reg_usb0_vbus {
	status = "okay";
	pinctrl-0 = <&usb0_vbus_pin_vt900v2>;
	gpio = <&pio 1 9 GPIO_ACTIVE_HIGH>;   /* PB9 */  
	enable-active-high;
	/delete-property/ regulator-boot-on;
};
&reg_usb1_vbus {
	status = "okay";
	pinctrl-0 = <&usb1_vbus_pin_vt900v2>;  
	gpio = <&pio 7 14 GPIO_ACTIVE_HIGH>;   /* PH14 */  
	enable-active-high;
	/delete-property/ regulator-boot-on;
};


&reg_usb2_vbus {
	status = "okay";
	pinctrl-0 = <&usb2_vbus_pin_vt900v2>;
	gpio = <&pio 7 15 GPIO_ACTIVE_HIGH>;   /* PH15 */ 
	enable-active-high;
	/delete-property/ regulator-boot-on;
};
#include "axp209.dtsi"

&reg_dcdc2 {
	regulator-always-on;
	regulator-min-microvolt = <1000000>;
	regulator-max-microvolt = <1400000>;
	regulator-name = "vdd-cpu";
};

&reg_dcdc3 {
	regulator-always-on;
	regulator-min-microvolt = <1000000>;
	regulator-max-microvolt = <1400000>;
	regulator-name = "vdd-int-dll";
};

&reg_ldo2 {
	regulator-always-on;
	regulator-min-microvolt = <3000000>;
	regulator-max-microvolt = <3000000>;
	regulator-name = "avcc";
};

&reg_ahci_5v {
	status = "okay";
};

&reg_usb0_vbus {
	status = "okay";
};

&reg_usb1_vbus {
	status = "okay";
};

&reg_usb2_vbus {
	status = "okay";
};

&uart0 {
	pinctrl-names = "default";
	pinctrl-0 = <&uart0_pins_a>;
	status = "okay";
};

&uart7 {
	pinctrl-names = "default";
	pinctrl-0 = <&uart7_pins_a>;
	status = "okay";
};

&usb_otg {
	/*dr_mode = "otg";*/
	dr_mode = "peripheral";
	status = "okay";
};

&usbphy {
	pinctrl-names = "default";
	pinctrl-0 = <&usb0_id_detect_pin_vt900v2>, <&usb0_vbus_detect_pin_vt900v2>;

	usb0_id_det-gpio = <&pio 7 11 GPIO_ACTIVE_HIGH>;   /* PH11 */
	usb0_vbus_det-gpio = <&pio 7 13 GPIO_ACTIVE_HIGH>; /* PH13 */
	usb0_vbus-supply = <&reg_usb0_vbus>;
	usb1_vbus-supply = <&reg_usb1_vbus>;
	usb2_vbus-supply = <&reg_usb2_vbus>;

	status = "okay";
};

